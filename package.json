{
  "name": "titanium-pos-finance",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:next\"",
    "dev:vite": "vite",
    "dev:next": "cd ecommerce && npm run dev",
    "build": "tsc && powershell -ExecutionPolicy Bypass -File ./scripts/build-prod.ps1",
    "preview": "vite preview",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "emulators:start": "firebase emulators:start --only auth,firestore",
    "emulators:exec": "firebase emulators:exec --only auth,firestore",
    "test:security": "firebase emulators:exec --only firestore 'vitest run'",
    "deploy:rules": "firebase deploy --only firestore:rules"
  },
  "dependencies": {
    "@google/genai": "^1.30.0",
    "firebase": "^12.8.0",
    "lucide-react": "^0.555.0",
    "prop-types": "^15.8.1",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "react-is": "^18.2.0",
    "react-window": "^2.2.6",
    "recharts": "^3.5.1",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@firebase/rules-unit-testing": "^4.0.1",
    "@testing-library/react": "^16.3.2",
    "@types/node": "^22.14.0",
    "@types/react-window": "^1.8.8",
    "@vitejs/plugin-react": "^5.0.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.5.0",
    "globals": "^17.3.0",
    "jsdom": "^28.0.0",
    "typescript": "~5.8.2",
    "typescript-eslint": "^8.54.0",
    "vite": "^6.2.0",
    "vitest": "^4.0.18"
  }
}